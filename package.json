{
  "name": "ts-backend-boilerplate",
  "version": "1.0.0",
  "description": "Typescript serverside boilerplate",
  "main": "src/index.ts",
  "author": "0417kch@naver.com",
  "license": "MIT",
  "scripts": {
    "typeorm": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js",
    "test": "jest --detectOpenHandles --forceExit",
    "docker:dev": "nodemon --exec ts-node -r tsconfig-paths/register src/index.ts",
    "build:dev": "rimraf ./dist && webpack --env.NODE_ENV=development",
    "build:prod": "rimraf ./dist && webpack --env.NODE_ENV=production",
    "dev": "docker-compose up",
    "start": "node ./dist/app.js",
    "lint": "eslint \"./src/**/*.ts\""
  },
  "devDependencies": {
    "@babel/core": "^7.8.7",
    "@babel/plugin-proposal-class-properties": "^7.8.3",
    "@babel/plugin-proposal-decorators": "^7.8.3",
    "@babel/preset-env": "^7.8.7",
    "@babel/preset-typescript": "^7.8.3",
    "@types/cookie-parser": "^1.4.2",
    "@types/express": "^4.17.3",
    "@types/helmet": "^0.0.45",
    "@types/jest": "^25.1.4",
    "@types/morgan": "^1.9.0",
    "@types/node": "^13.9.0",
    "@types/swagger-jsdoc": "^3.0.2",
    "@types/swagger-ui-express": "^4.1.1",
    "@typescript-eslint/eslint-plugin": "^2.23.0",
    "@typescript-eslint/parser": "^2.23.0",
    "babel-loader": "^8.0.6",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-import-resolver-webpack": "^0.12.1",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-prettier": "^3.1.2",
    "jest": "^25.1.0",
    "nodemon": "^2.0.2",
    "prettier": "^1.19.1",
    "rimraf": "^3.0.2",
    "swagger-jsdoc": "^3.5.0",
    "swagger-ui-express": "^4.1.3",
    "ts-jest": "^25.2.1",
    "ts-node": "^8.6.2",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^3.8.3",
    "webpack": "^4.42.0",
    "webpack-cli": "^3.3.11",
    "webpack-node-externals": "^1.7.2"
  },
  "dependencies": {
    "@babel/polyfill": "^7.8.7",
    "cookie-parser": "^1.4.4",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "helmet": "^3.21.3",
    "http-status-codes": "^1.4.0",
    "morgan": "^1.9.1",
    "pg": "^7.18.2",
    "typedi": "^0.8.0",
    "typeorm": "^0.2.25"
  },
  "jest": {
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "testRegex": "\\.test\\.ts$",
    "moduleFileExtensions": [
      "ts",
      "js",
      "json"
    ],
    "collectCoverage": true,
    "globals": {
      "ts-jest": {
        "diagnostics": true
      }
    },
    "moduleNameMapper": {
      "@/(.*)$": "<rootDir>/src/$1"
    }
  }
}
